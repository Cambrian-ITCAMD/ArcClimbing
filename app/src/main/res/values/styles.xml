<resources>
    <!-- Base application theme. -->

    <style name="FirebaseUI" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <item name="colorPrimary">@color/arc_grey</item>
        <item name="colorPrimaryDark">@color/arc_grey_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/arc_orange</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="colorSurface">@color/arc_grey_50</item>

        <item name="android:colorBackground">@color/arc_grey_50</item>
    </style>

    <style name="FirebaseUI.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

</resources>